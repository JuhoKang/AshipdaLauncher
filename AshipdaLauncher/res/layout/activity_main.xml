<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0000"
    android:orientation="vertical"
    android:weightSum="4"  >
<!-- mother layout -->
    
    
	<!-- first layout start -->    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btndate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/wifion3"
                android:textSize="50sp"
                android:textStyle="bold"
                />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <Button
                android:id="@+id/btnclock"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textIsSelectable="false"
                android:textSize="50sp"
                android:textStyle="bold"
                android:background="@drawable/wifion2"
                 />
            
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <!-- 와이파이 토글버튼 -->

            <ToggleButton
                android:id="@+id/btnwifi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/toggle_bg"
                android:textOn=""
				android:textOff=""
				/>   
			<!-- background - > res @drawable/toggle_bg.xml -->
            
        </LinearLayout>
    </LinearLayout>
	<!-- first layout end -->    
    
    <!-- sec layout start -->    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <Button
            android:id="@+id/btninternet"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/internet"
            />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <Button
            android:id="@+id/btnsos"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/sos"
            />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <Button
            android:id="@+id/btnapp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/folder"
            />
            
        </LinearLayout>
    </LinearLayout>
	<!-- sec layout end -->    
    
    
    <!-- thr layout start -->    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <Button
            android:id="@+id/btnmms"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/mms"
            />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <Button
            android:id="@+id/btncamera"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/camera"
            />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <Button
            android:id="@+id/btngallery"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/gallery"
            />
            
        </LinearLayout>
    </LinearLayout>
	<!-- thr layout end -->    
    
    <!-- for layout start -->    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" >
            
            <Button
            android:id="@+id/btnphonecall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/phonecall"
            />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <Button
            android:id="@+id/btnrecall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="재다이얼 들어갈 부분"
            />
            
        </LinearLayout>
    </LinearLayout>
	<!-- for layout end -->    
	
</LinearLayout>